#include<stdio.h> 
int main() 
{
   printf("here is the menu: 1.pizza, Rs 239\n2.burger, Rs 129\n3.pasta, Rs 179\n4.french fries, Rs 99\n5.sandwich, Rs 149"); 
   int choice=0; 
   scanf("your choice : %d",choice); 
   switch(choice)
   {
       case 1:  
       printf("food item-pizza\nprice-239"); 
       break;
       case 2:  
       printf("food item-burger\nprice-129"); 
       break;
       case 3:  
       printf("food item-pasta\nprice-179"); 
       break;
       case 4: 
       printf("food item-french fries\nprice-99"); 
       break;
       case 5:  
       printf("food item-sandwitch\nprice-149"); 
       break; 
       default : printf("invalid choice"); 
    } 
    return 0; 
 }
